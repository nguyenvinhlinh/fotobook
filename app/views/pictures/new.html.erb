<%= form_for @picture, url: {controller: "pictures", action: "create"} do |f|%>
    <div class="row">
        <div class="col-lg-6">
            <div class="input-group input-group-lg">
		            <span class="input-group-addon" id="basic-addon1">Url</span>
		            <%= f.text_field :url, class: "form-control", placeholder: "Paste image url here or upload"%>
                <span class="input-group-btn input-group-lg">
                    <button class="btn btn-default" type="button">Upload</button>
                </span>
	          </div>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-6">
            <div class="input-group input-group-lg">
		            <span class="input-group-addon" id="basic-addon1">Tags</span>
                <%= text_field_tag :tags_string,nil, class: "form-control", id: "tags2", placeholder: "Tags"%>
                <span class="input-group-btn input-group-lg">
                    	  <%= f.submit "Create", class: "btn btn-default", type: "button"%> 
                </span>
	          </div>        
        </div>
    </div>
    <%= f.submit "Create", class: "btn btn-default", type: "button"%> 
<% end %>

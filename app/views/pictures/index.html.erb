<div class="container" >
    <div class="grid">
        <div class="grid-sizer"></div>
        <% @pictures.each do |f| %>
          <div class="grid-item">
            <img src="<%= f.url %>" href="<%= f.url %>"  hrefto="/pictures/<%= f.id %>" rel="pictures" />
          </div>
        <% end %>
    </div>
</div>
<div class="container">
  <button id="loadmore-button" class="btn btn-primary btn-lg active">Load More Image</button>
</div>
<script type="text/javascript">
 window.currentPage = 1;
 <% unless @page.nil? %>
 window.currentPage = <%= @page %>
 <% end %>
</script>
<%= javascript_include_tag('picture') %>
